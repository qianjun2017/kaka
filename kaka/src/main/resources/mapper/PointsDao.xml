<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cc.customer.dao.PointsDao">

	<update id="updateCustomerPoints" parameterType="com.cc.customer.bean.PointsBean">
		update t_customer set points = points + #{points} where id = #{customerId}
	</update>
	
</mapper>